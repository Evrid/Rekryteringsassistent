@model Rekryteringsassistent.Models.Candidate

@{
    ViewData["Title"] = "Candidate Analysis";
}

<div class="container">
    <h1>@ViewData["Title"]</h1>

    <form asp-controller="Analysis" asp-action="Index" method="post">
        <!-- Candidate Fields -->
        <fieldset>
            <legend>Candidate Information</legend>

            <div class="form-group">
                <label asp-for="FirstName">First Name</label>
                <input asp-for="FirstName" class="form-control" />
            </div>

            <div class="form-group">
                <label asp-for="LastName">Last Name</label>
                <input asp-for="LastName" class="form-control" />
            </div>

            <div class="form-group">
                <label asp-for="Email">Email</label>
                <input asp-for="Email" class="form-control" />
            </div>

            <div class="form-group">
                <label asp-for="CV_Text">CV Text</label>
                <textarea asp-for="CV_Text" rows="5" class="form-control"></textarea>
            </div>
        </fieldset>

        <!-- Criteria Fields -->
       
        <fieldset>
            <legend>Criteria</legend>

            <div class="form-group">
                <label for="Skills">Skills</label>
                <input id="Skills" name="Skills" class="form-control" />
            </div>

            <div class="form-group">
                <label for="MinimumExperience">Minimum Experience number</label>
                <input id="MinimumExperience" name="MinimumExperience" type="number" class="form-control" />
            </div>
        </fieldset>

        <button type="submit" class="btn btn-primary">Analyze</button>
    </form>

    <!-- Display Analysis Result -->
    @if (Model.AnalysisResult != null)
    {
        <div class="mt-5">
            <h2>Analysis Result</h2>
            <p><strong>Rating:</strong> @Model.AnalysisResult.Rating</p>
            <p><strong>Strengths:</strong> @Model.AnalysisResult.Strengths</p>
            <p><strong>Weaknesses:</strong> @Model.AnalysisResult.Weaknesses</p>
        </div>
    }

</div>
